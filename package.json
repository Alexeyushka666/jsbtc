{
  "name": "jsbitcoin",
  "version": "0.0.0-semantically-released",
  "description": "JavaScript Bitcoin library",
  "main": "dist/jsbtc.js",
  "scripts": {
    "build:wasm:prebuild": "docker  build  -f ./Dockerfile.wasm -t wasm-builder .",
    "build:wasm:pre": "docker  build  -f ./Dockerfile.wasm -t wasm-builder .",
    "build:wasm": "docker run --rm --name wasm-builder -v $(pwd)/:/jsbtc/ -it wasm-builder /jsbtc/build.wasm.sh",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 1 --branches 1 --functions 1 --lines 1",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha test/jsbtc.test.js --require @babel/register ",
    "test:2": "mocha test/jsbtc.test.js  ",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "npm run prebuild;babel --copy-files -d dist --ignore *.test.js src",
    "build:web": "npm run prebuild;webpack --output-filename jsbtc.web.min.js ",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitaps-com/jsbtc.git"
  },
  "keywords": [
    "bitcoin"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Aleksey Karpov <admin@bitaps.com> (https://bitaps.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitaps-com/jsbtc/issues"
  },
  "homepage": "https://github.com/bitaps-com/jsbtc#readme",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/register": "7.8.3",
    "@babel/runtime": "7.8.4",
    "chai": "^4.2.0",
    "chai-as-promised": "7.1.1",
    "codecov.io": "0.1.6",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "ghooks": "2.0.4",
    "istanbul": "0.4.5",
    "mocha": "6.2.2",
    "nyc": "15.0.0",
    "rimraf": "3.0.1",
    "semantic-release": "^17.0.2",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "terser-webpack-plugin": "2.3.4"
  },
  "dependencies": {
    "bn.js": "5.1.1",
    "global": "4.4.0",
    "math-erf": "1.0.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
